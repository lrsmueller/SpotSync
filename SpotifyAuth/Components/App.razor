<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
	
	<link href="lib/tabler/core/dist/css/tabler.css" rel="stylesheet" />
	<link href="lib/tabler/core/dist/css/tabler-flags.css" rel="stylesheet" />
	<link href="lib/tabler/core/dist/css/tabler-vendors.css" rel="stylesheet" />
	<link href="lib/tabler/icons-webfont/dist/tabler-icons.css" rel="stylesheet" />

    <script src="lib/tabler/core/dist/js/tabler.js"></script>


	<link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="SpotifyAuth.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="@RenderModeForPage" />
</head>

<body>
    <Routes @rendermode="@RenderModeForPage" />
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? RenderModeForPage => HttpContext.Request.Path.StartsWithSegments("/Account")
        ? null
        : InteractiveServer;
}
